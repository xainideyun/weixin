.container {
    width: 100%;
    height: 667px;
    background-color: gray;
    opacity: 0.8;
    position: fixed;
  }
  
  
  .cards {
    position: absolute;
    width: 240px;
    height: 180px;
    margin: 0 auto;
    padding: 10px;
    background-color: #fefefe;
    color: red;
    border-radius: 20px;
    font-size: 14px;
  }
  .cards_mask {
    position: absolute;
    width: 240px;
    height: 120px;
    margin: 0 auto;
    padding-top: 80px;
    border-radius: 20px;
    background-color: red;
    z-index: 100;
    color: #fefefe;
    font-size: 22px;
    border: 10px;
    text-align: center;
  }
  .cards_header {
    font-size: 16px;
    color: gray;
    position: absolute;
    height: 25px;
    left: 7px;
    top: 5px;
  }
  .cards_text {
    width: 150px;
    height: 100px;
    position: absolute;
    right: 30px;
    top: 38px;
  }
  .cards>image {
      width: 50px;
      height: 50px;
      position: absolute;
      right: 5px;
      bottom: 38px;
  }
 
  .undisplay1 {
    display: none;
  }
  .undisplay2 {
    display: none;
  }